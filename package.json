{
  "name": "surge-volt",
  "displayName": "surge-volt",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "surge-volt.install",
        "category": "Surge",
        "title": "Install Surge"
      },
      {
        "command": "surge-volt.deploy",
        "category": "Surge",
        "title": "Deploy",
        "icon": "$(add)"
      },
      {
        "command": "surge-volt.deploy-on-existing",
        "category": "Surge",
        "title": "Deploy on this domain",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "surge-volt.refresh-domain-list",
        "category": "Surge",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "surge-volt.open-domain",
        "category": "Surge",
        "title": "Open domain"
      },
      {
        "command": "surge-volt.hello",
        "category": "Surge",
        "title": "Hello"
      },
      {
        "command": "surge-volt.delete-domain",
        "category": "Surge",
        "title": "Delete domain",
        "icon": "$(trash)"
      },
      {
        "command": "surge-volt.refresh-account-list",
        "category": "Surge",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "surge-volt.delete-account",
        "category": "Surge",
        "title": "Delete account",
        "icon": "$(trash)"
      },
      {
        "command": "surge-volt.connect-account",
        "category": "Surge",
        "title": "Connect account",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "surge-control",
          "title": "Surge Control",
          "icon": "./resources/octopus.svg"
        }
      ]
    },
    "views": {
      "surge-control": [
        {
          "id": "surge-default",
          "name": "Welcome",
          "when": "!surge-volt.surge:installed"
        },
        {
          "id": "surge-accounts",
          "name": "Accounts",
          "when": "!initializing && surge-volt.surge:installed"
        },
        {
          "id": "surge-domains",
          "name": "Domains",
          "when": "!initializing && surge-volt.surge:installed"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "surge-default",
        "contents": "Install Surge to get started, a static web publishing tool. Learn more on [surge.sh](https://surge.sh/).\n[Install Surge](command:surge-volt.install)\nAfter installing, [reload the window](command:workbench.action.reloadWindow) and log in to your account to start deploying your projects.",
        "when": "surge-volt:ready && !surge-volt.surge:installed"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "surge-volt.refresh-domain-list",
          "when": "view == surge-domains",
          "group": "navigation"
        },
        {
          "command": "surge-volt.deploy",
          "when": "view == surge-domains",
          "group": "navigation"
        },
        {
          "command": "surge-volt.refresh-account-list",
          "when": "view == surge-accounts",
          "group": "navigation"
        },
        {
          "command": "surge-volt.connect-account",
          "when": "view == surge-accounts",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "surge-volt.deploy-on-existing",
          "when": "view == surge-domains",
          "group": "inline@1"
        },
        {
          "command": "surge-volt.delete-domain",
          "when": "view == surge-domains",
          "group": "inline@2"
        },
        {
          "command": "surge-volt.delete-account",
          "when": "view == surge-accounts",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "surge-volt.deploy-on-existing",
          "when": "false"
        },
        {
          "command": "surge-volt.install",
          "when": "!surge-volt.surge:installed"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/loglevel": "^1.6.3",
    "loglevel": "^1.9.1",
    "unique-names-generator": "^4.7.1"
  }
}
